<div class="showpage-container my-5">

  <div class="container-fluid">
    <div class="card mb-2">
      <div class="card-header">
        <h2 class="page-heading"><%= @article.title %></h2>
      </div>
      <div class="card-body">
        <p class="card-text"><%= simple_format(@article.description) %></p>
      </div>
    </div>
    <%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-primary btn-sm rant-actions" %>
    <%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger btn-sm rant-actions" %>
    <%= link_to "All Articles", articles_path, class: "btn btn-success btn-sm rant-actions" %>
  </div>
</div>
