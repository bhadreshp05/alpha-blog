<% obj.each do |article| %>
  <div class="card my-2">
    <h4 class="card-header"> <%= link_to article.title, article_path(article) %> </h4>
    <div class="card-body">
      <p class="card-text"> <%= article.description %> </p>
      <div class="article-meta-details">
        <small>
          Created by: <%= article.user.username if article.user%>,
          <%= time_ago_in_words(article.created_at) %> ago,
          last updated: <%= time_ago_in_words(article.updated_at)%> ago
        </small>
      </div>
    </div>
  </div>
  <%= link_to 'Edit Article', edit_article_path(article), class: "btn btn-primary btn-sm rant-actions mt-2" %>
  <%= link_to "Delete Article", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger btn-sm rant-actions mt-2" %>
<% end %>