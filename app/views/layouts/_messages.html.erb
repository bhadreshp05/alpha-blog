<div class="row">
  <div class="container-fluid col-md-10 mt-2">
    <% flash.each do |name, msg| %>
      <div class='alert alert-<%=  "#{name}" %>'>
        <a href="#" class="close" data-dismiss="alert">&#215</a>
        <%= content_tag :div, msg, :id => "flash#{name}" if msg.is_a?(String) %>
      </div>
    <% end %>
  </div>
</div>
