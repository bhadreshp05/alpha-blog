<%= render 'shared/errors', obj: @user %>

<div class="row mt-5">
  <div class="col-md-12">
    <%= form_for @user do |f| %>

      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :username %>
        </div>

        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :email %>
        </div>

        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :password %>
        </div>

        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-8 container-fluid">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-primary") %>
        </div>
      </div>

    <% end %>

    <small>
      <div class="container-fluid col-sm-4" id="cancel">
        <%= link_to 'Cancel & return to all Blogs', articles_path %>
      </div>
    </small>

  </div>
</div>
